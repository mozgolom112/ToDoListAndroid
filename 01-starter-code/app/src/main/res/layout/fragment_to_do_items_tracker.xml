<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="trackerViewModel"
            type="ru.mozgolom112.todolistyaleto2022.ui.todoitemstracker.viewmodel.ToDoItemsTrackerViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ya_Primary_Back">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ya_Primary_Back"
                app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed"
                app:expandedTitleGravity="center|start"
                app:expandedTitleMarginBottom="14dp"
                app:expandedTitleMarginStart="32dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


                <ImageButton
                    android:id="@+id/btnIsCompletedTaskShowed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="44dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_eye_slash"
                    app:layout_collapseMode="pin"></ImageButton>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/Widget.MaterialComponents.Toolbar.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/ya_Primary_Back"
                    android:elevation="0dp"
                    app:title="Мои дела">


                </com.google.android.material.appbar.MaterialToolbar>

                <TextView
                    android:id="@+id/txtBarSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="14dp"
                    android:text="Выполнено - X"
                    android:textColor="@color/ya_Secondary_Label"
                    android:textSize="16sp"
                    app:layout_collapseMode="parallax" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleToDoItemList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/border"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="16"
            tools:listitem="@layout/list_item">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddNewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="32dp"
            android:backgroundTint="@color/ya_Blue"
            android:onClick="@{() -> trackerViewModel.onCreateNewItem()}"
            android:src="@drawable/ic_plus" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

