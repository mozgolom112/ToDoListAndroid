<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="Мои дела"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ya_Primary_Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCompletedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:text="Выполнено - X"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ya_Secondary_Label"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/txtHeader"
            app:layout_constraintTop_toBottomOf="@+id/txtHeader" />

        <Button
            android:id="@+id/btnHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:text="Hide"
            android:textColor="@color/ya_Blue"
            app:layout_constraintBottom_toBottomOf="@+id/txtCompletedCount"
            app:layout_constraintStart_toEndOf="@+id/txtCompletedCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>