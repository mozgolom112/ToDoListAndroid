<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/toDoItemsTrackerFragment">

    <fragment
        android:id="@+id/toDoItemsTrackerFragment"
        android:name="ru.mozgolom112.todolistyaleto2022.todoitemstracker.ToDoItemsTrackerFragment"
        android:label="ToDoItemsTrackerFragment" >
        <action
            android:id="@+id/actionToDoItemsTrackerFragmentToToDoItemDetailFragment"
            app:destination="@id/toDoItemDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/toDoItemDetailFragment"
        android:name="ru.mozgolom112.todolistyaleto2022.todoitemdetail.ToDoItemDetailFragment"
        android:label="ToDoItemDetailFragment" >
        <action
            android:id="@+id/actionToDoItemDetailFragmentToToDoItemsTrackerFragment"
            app:destination="@id/toDoItemsTrackerFragment"
            app:popUpTo="@id/toDoItemDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>